<h1>New Color</h1>



<%= form_for(@color) do |f| %>

  <div class="field">
    <%= f.label :hex_code, "Hex Code" %><br />
    <%= f.text_field :hex_code %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
  </div>

  <div class="actions">
    <%= f.submit "Add Color"%>
  </div>
<% end %>
